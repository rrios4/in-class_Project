<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.CheckBox?>
<HBox fx:controller="sample.Controller"
      xmlns:fx="http://javafx.com/fxml" alignment="center">
    <VBox>
        <ListView fx:id = "employeeListView" />
        <Button text="Delete Selected" prefWidth="250" prefHeight="40" fx:id="deleteButton"/>

    </VBox>

    <VBox>
        <HBox>
            <Label text = "First Name" prefWidth="150" alignment="CENTER"/>
            <TextField prefWidth="150" promptText="First Name" fx:id="firstNameTextField"/>

        </HBox>
        <HBox>
            <Label text = "Last Name" prefWidth="150" alignment="CENTER"/>
            <TextField prefWidth="150" promptText="Last Name" fx:id="lastNameTextField"/>

        </HBox>
        <HBox>
            <Label text="Is Active" prefWidth="150" alignment="CENTER"/>
            <CheckBox prefWidth="150"  fx:id="isActiveCheckBox"/>
        </HBox>

        <HBox>
            <Button text="Clear" prefWidth="150" prefHeight="40" fx:id="clearButton"/>
            <Button text="Add New" prefWidth="150" prefHeight="40" fx:id="addButton"/>
        </HBox>

    </VBox>

</HBox>